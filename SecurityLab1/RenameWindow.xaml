<Window x:Class="SecurityLab1.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityLab1"
        mc:Ignorable="d"
        Title="Rename" Height="144" Width="400" Background="LightGray" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label  HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold">Enter new file name</Label>
        <TextBox Height="20" Width="140" HorizontalContentAlignment="Center" x:Name="newNameField"></TextBox>
        <Button Height="20" Width="60" Margin ="0 50 0 0" x:Name="submitButton" Click="submitButton_Click">Rename</Button>
    </Grid>
</Window>
