<Window x:Class="SecurityLab1.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityLab1"
        mc:Ignorable="d"
        Title="Activation" Height="200" Width="400" Background="LightGray" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label  HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Margin="15">Activation</Label>
        <Label  HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0 65 0 0" >Enter activation code</Label>
        <PasswordBox Height="20" Width="140" Margin="0 40 0 0" HorizontalContentAlignment="Center" x:Name="passwordField"></PasswordBox>
        <Button Height="20" Width="60" Margin="0 90 0 0" x:Name="submitButton" Click="submitButton_Click">Submit</Button>
    </Grid>
</Window>
